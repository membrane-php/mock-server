#!/bin/sh

vendor/bin/generate-hydrators src/ generated/ --hydrator_namespace_prefix="Membrane\\MockServer\\Generated\\Hydrator" --psr4_namespace_prefix="Membrane\\MockServer\\Generated"
vendor/bin/generate-repositories src/ generated/ --repositories_namespace_prefix="Membrane\\MockServer\\Generated\\Repository" --psr4_namespace_prefix="Membrane\\MockServer\\Generated"

vendor/bin/membrane membrane:membrane:generate-processors -vvv `pwd`/api/api.yml ./generated/ --namespace="Membrane\\MockServer\\Generated"
vendor/bin/membrane-router m:r:g `pwd`/api/api.yml generated/routes.php
